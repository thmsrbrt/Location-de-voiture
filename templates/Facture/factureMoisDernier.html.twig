{% extends "base.html.twig"%}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 style="margin-top: 10px; margin-bottom: 10px">Facture du mois</h1>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                               {% if factures is defined %}
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>id</th>
                                                <th>Date</th>
                                                <th>Nom</th>
                                                <th>Prénom</th>
                                                <th>Montant</th>
                                                <th>Service</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for facture in factures %}
                                                <tr>
                                                    <td>{{ facture.id }}</td>
                                                    <td>{{ facture.dateF|date('d/m/Y') }}</td>
                                                    <td>{{ facture.idC.nom }}</td>
                                                    <td>{{ facture.idC.prenom }}</td>
                                                    <td>{{ facture.valeur }}.00€</td>
                                                    <td>
                                                        <div class="btn-block">
                                                            <button type="button" class="btn btn-warning">
                                                                <a href="mailto:{{ facture.idC.email }}" >Contacter</a>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th class="col">Nombre de facture : {{ data.nbFacture }}</th>
                                                <th class="col"></th>
                                                <th class="col"></th>
                                                <th class="col"></th>
                                                <th class="col">Total : {{ data.totalFacture }}.00€</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                               {% else %}
                                   <h5 class="h5">Pas de facture pour le dernier mois</h5>
                               {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}